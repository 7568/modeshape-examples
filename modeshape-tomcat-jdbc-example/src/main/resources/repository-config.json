{
    "name" : "JDBCRepository",
    "jndiName" : "",
    "monitoring" : {
        "enabled" : true
    },
    "storage" : {
        "persistence" : {
            "type" : "db",
            "datasourceJNDI" : "${datasource.jndi}"
        },
        "binaryStorage": {
            "type" : "database",
            "dataSourceJndiName" : "java:comp/env/jdbc/modeshape",
            "minimumBinarySizeInBytes" : 1024
        }
    },
    "workspaces" : {
        "default" : "default",
        "allowCreation" : true
    }
}